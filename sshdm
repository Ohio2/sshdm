#!/bin/zsh
#set -x
lookin=$HOME/.local/share/sshdm.txt
#x(){
#	xinit $1	
#}
main(){
	case $* in
		--lookin) lookin=$2 ;;

	esac
	#user prefrence
	filewc="$(wc -l $lookin)"
	if [ $filewc = 1 ]; then
		xinit $(cut -d "|" -f2 $lookin)
	else
		cut -d "|" -f1 $lookin
		echo -e "\n\n\n\n\n\n\n\n\n"
		echo "[name of binary] choice: "
		read $choice	
		xinit "$(grep "$choice" $lookin | cut -d "|" -f2)"

	fi
}
main
