set -x
export lookin=$HOME/.local/share/sessions.sshdm
export DISPLAY=:0
export VT=vt1
export dbg=False
export xconf=/etc/X11/xorg.conf
#instead of xinit OR startx use dylan araps' x wrapper
xwrap(){
	# $1 - disp
	# $2 - vt
	# $3 - xflags
	exec X $1 $2 &
}
main(){
	while [ ! -z "$1" ]; do
		case $1 in
			--lookin) unset lookin ; lookin=$2 ;;
			--dbg) dbg=True ;;
			--disp) unset DISPLAY ; DISPLAY=$2 ;;
			--vt) unset vt ; vt=$2 ;;
			--xconf) unset xconf ; xconf=$2 ;;
			--help) echo "--disp: set display"
				echo "--lookin: look in file set by flag"
				echo "--vt: set virtual terminal for the x wrapper"
				exit 0 ;;
			*) ;;
		esac
	shift
	done
	if [ $dbg = True ]; then 
		echo "preinit debug info:"
		echo "lookin: $lookin"
		echo "dbg: $dbg"
		echo "display: $DISPLAY"
		echo -e "\n\n\n Press any key to continue."
		read -s
	fi

	#user prefrence	
	if [ $(grep -v "'''" $lookin | wc -l) = 1 ]; then
		xwrap $DISPLAY $VT
		DISPLAY=$DISPLAY VT=$VT $(grep -v "'''" $lookin | cut -d "|" -f2) 
		pkill X
	else
		grep -v "'''" $lookin | cut -d "|" -f1
		echo -e "\n\n\n\n\n\n\n\n\n"
		echo "[name of binary] choice: "
		read $choice
		xwrap $DISPLAY $VT 
		DISPLAY=$DISPLAY VT=$VT $(grep "$choice" $lookin | cut -d "|" -f2)
		pkill --signal QUIT X

	fi
}
main $* 
